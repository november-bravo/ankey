<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <!-- Copy basic ankey image -->
        <fileSet>
            <directory>${basedir}/target/dependency</directory>
            <outputDirectory/>
        </fileSet>

        <!-- Copy custom project configuration -->
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <outputDirectory>/${directoryName}</outputDirectory>
            <excludes>
                <exclude>**/*.sh</exclude>
                <exclude>**/*.command</exclude>
                <exclude>**/*.bat</exclude>
            </excludes>
        </fileSet>

        <!-- Copy Postgresql configuration -->
        <fileSet>
            <directory>${basedir}/target/dependency/ankey/db/postgresql/conf</directory>
            <outputDirectory>/${directoryName}/conf</outputDirectory>
            <includes>
                <include>*.json</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/${directoryName}/extensions</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <scope>runtime</scope>
            <includes>
                <include>com.gis.idm.integration:croc-integration-*:jar</include>
                <include>com.gis.idm.integration.common:ankey-integration-common-bundle:jar</include>
                <include>com.gis.commons:transliteration:jar</include>
                <include>com.google.code.gson:gson:jar</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/${directoryName}/connectors</outputDirectory>
            <includes>
                <include>com.gis.openicf.connectors:*-connector</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
